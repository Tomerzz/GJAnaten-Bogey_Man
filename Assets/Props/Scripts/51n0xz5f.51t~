using System.Collections;
using System.Collections.Generic;
using UnityEngine;

public class RobotController : MonoBehaviour
{

    private AudioSource audioS;
    private float timer;
    private float movement = 1.0f;

    [Header("Speed & Lenght")]
    public float lenght = 3.0f;
    public float speed = 1.0f;

    [Header("Sound")]
    public float soundEmitted = 10.0f;

    private Vector2 spawnTransform;

    void Start()
    {
        audioS = GetComponent<AudioSource>();
        timer = 0.0f;
        spawnTransform = transform.position;
    }

    void Update()
    {
        if (timer > 0.0f) timer -= Time.deltaTime;

        if (transform.position.x > spawnTransform.x + lenght) movement = -1.0f;
        if (transform.position.x < spawnTransform.x - lenght) movement = 1.0f;

        if(!audioS.isPlaying) transform.position += new Vector3(movement * speed, 0.0f, 0.0f) * Time.deltaTime;

    }

    private void OnTriggerEnter2D(Collider2D coll)
    {
        if (coll.gameObject.GetComponent<IPlayer>())
        {
            if (timer <= 0.0f)
            {
                IPlayer player = coll.gameObject.GetComponent<IPlayer>();
                player.DoingSound(20.0f);

                audioS.Play();
                timer = 4.0f;
            }
        }
    }

}
